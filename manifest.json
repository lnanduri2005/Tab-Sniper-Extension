{
  "manifest_version": 3,
  "name": "Tab Sniper",
  "version": "1.0.0",
  "description": "Boost productivity by blocking distracting websites during focus sessions. Features a customizable timer and website blocker.",
  "permissions": ["storage", "tabs", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon_sleep.png",
      "48": "icon_sleep.png",
      "128": "icon_sleep.png"
    }
  },
  "icons": {
    "16": "icon_sleep.png",
    "48": "icon_sleep.png",
    "128": "icon_sleep.png"
  },
  "author": "Likitha Nanduri, Abhigna Nimmagadda, and Parikshith Venkataraghavan",
  "homepage_url": "https://github.com/yourusername/tab-sniper",
  "minimum_chrome_version": "88"
}